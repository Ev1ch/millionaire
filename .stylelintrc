{
    "extends": "stylelint-config-standard-scss",
    "rules": {
        "indentation": 4,
        "string-quotes": "single",
        "selector-class-pattern": "^[a-z][a-zA-Z0-9]+$",
        "scss/dollar-variable-empty-line-before": [
            "always",
            { "except": ["after-dollar-variable", "first-nested"] }
        ]
    }
}
